<div class="container">
  <div class="row">
    <h1>Votre maison d'horreur</h1>

    <div class="card-trip col-8">
      <img src=" <%= @flat.image_url %> " />
      <div class="card-trip-infos">
        <div>
          <h2> <%= @flat.name %> </h2>
          <p>Address: <%= @flat.address %> </p>
          <p> <%= @flat.description %> </p>
          <p> <%= @flat.max_people %> max people </p>
        </div>
        <h2 class="card-trip-pricing"> <%= @flat.price %> € </h2>
        <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
      </div>
    </div>

    <div class="airbnb-container col-4">
      <h1>Réserver un logement</h1>
      <%= render 'form', flat: @flat, booking: @booking %>
    </div>
  </div>
 </div>
