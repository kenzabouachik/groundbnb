<div class="container">
  <div class="margin-top-index">

    <h1><strong>Welcome to your worst nightmare</strong></h1>
    <h4>Step into darkness...</p>

    <div class="cards mt-5">
      <% @flats.each do |flat| %>
      <div class="card-category">
        <div >
          <%= cl_image_tag flat.photo.key, height: 300, width: 400, crop: :fill, class: "card-img-top" %>
        </div>
        <div class="d-flex justify-content-between end">
          <div class="p-3 mb-0">
            <h6 class="title mb-3"><%= link_to flat.name, flat_path(flat) %></h6>
            <p class="card-address"><%= flat.address%></p>
          </div>
          <div>
            <div class="d-flex justify-content-center mt-3">
              <p class="strong"><%= flat.max_people %></p>
              <i class="fa-solid fa-user ms-1" style="font-size: 16px"></i>
            </div>
            <p class="mb-0 mt-5"><%= flat.price.to_i %>â‚¬</p>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
