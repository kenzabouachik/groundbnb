
<div class="container">
<div class="banner-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://media-mcetv.ouest-france.fr/wp-content/uploads/2018/05/Stranger-Things-Le-photographe-Sean-Heavey-accuse-Netflix-de-vol-de-photo-grande.jpg)">
  My Bookings
</div>

<% @bookings.each do |booking| %>
<%=link_to booking_path(booking) do %>
  <div class="booking-product">
    <img src="<%=booking.flat.image_url%>" alt="">
    <div class="booking-product-infos">
      <h2><%= booking.flat.name %></h2>
      <p>
      <strong>Arrival:</strong> <%= booking.start_date%> <br>
      <strong>Departure:</strong> <%= booking.end_date%> <br>
      <strong>Total Price:</strong> <%= (booking.end_date - booking.start_date).to_i %> x <%= booking.flat.price.to_i%> € = <%= ((booking.end_date - booking.start_date).to_i * booking.flat.price).to_i  %>€
      </p>
    </div>
  </div>
  <% end %>
<% end %>
</div>
